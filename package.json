{
  "name": "vocdoni-proof_of_concept-javascript",
  "version": "1.0.0",
  "description": "A Proof of Concept of using the Vocdoni SDK in a (purish) JavaScript project.",
  "main": "index.js",
  "scripts": {
    "build": "browserify -p esmify ./src/app.js -o ./public/js/bundle.js",
    "lint": "eslint ./src/",
    "start": "reload -d ./public/",
    "test": "jest",
    "watch": "watchify -p esmify ./src/app.js -o ./public/js/bundle.js"
  },
  "author": "Andr√©s Pereira de Lucena",
  "license": "AGPL3",
  "jest": {
    "setupFiles": [ "./jest-setup.js" ],
    "transform": {
      "\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": ["/node_modules/(?!@vocdoni/sdk)"],
    "testEnvironment": "jsdom",
    "testRegex": "\\.(test|spec)\\.js$"
  },
  "dependencies": {
    "@vocdoni/sdk": "^0.0.1-alpha",
    "foundation-sites": "^6.7.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.20.5",
    "@babel/plugin-transform-classes": "^7.20.2",
    "@babel/plugin-transform-regenerator": "^7.20.5",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-jest": "^29.3.1",
    "browserify": "^17.0.0",
    "bufferutil": "^4.0.7",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "esmify": "^2.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "reload": "^3.2.0",
    "utf-8-validate": "^5.0.10",
    "watchify": "^4.0.0"
  }
}
